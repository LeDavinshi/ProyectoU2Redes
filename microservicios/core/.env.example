# Variables de entorno del servicio core (no incluyas secretos reales en este archivo)
PORT=4200
NODE_ENV=production

# Base de datos
DB_HOST=mysql-master
DB_PORT=3306
DB_NAME=gestion_personal
DB_USER=admin
DB_PASSWORD=
# Alternativa: leer contraseña desde fichero montado por Docker secrets
# DB_PASSWORD_FILE=/run/secrets/mysql_root_password

# Límites y seguridad
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
REQUEST_BODY_LIMIT=10kb
RATE_LIMIT_WINDOW_MINUTES=15
RATE_LIMIT_MAX=100

# Pool
DB_CONN_LIMIT=10
DB_CONNECT_TIMEOUT_MS=10000
